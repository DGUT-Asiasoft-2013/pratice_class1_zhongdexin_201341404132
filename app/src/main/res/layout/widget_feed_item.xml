<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent">

        <com.example.helloworld.fragments.widgets.AvatarView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/feed_item_avatar"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_item_username"
            android:layout_below="@id/feed_item_avatar"
            android:layout_centerHorizontal="true"
            android:text="name"
            android:textColor="@android:color/darker_gray"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/feed_item_title"
            android:text="title"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:id="@+id/feed_item_date"
            android:textSize="12sp"
            android:text="create date"
            android:textColor="#aaa"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feed_item_text"
            android:layout_marginTop="18dp"
            android:text="Content Text"
            android:textColor="@android:color/black"/>


    </FrameLayout>

</FrameLayout>